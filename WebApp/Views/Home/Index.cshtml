@using Data.Models
@model IQueryable<ShowTime>
@{
    ViewData["Title"] = "Home Page";
}

<<div class="welcome-section text-center mb-4 p-5">
    <h1 class="display-4 text-light">Welcome to CinemaWorld</h1>
    <p class="lead text-light">Discover the magic of movies! Check out the latest showings and book your seat today.</p>
</div>

<!-- Nadchodzące filmy -->
<h2 class="text-center mt-5 text-light">Upcoming Movies</h2>

@if (Model.Any())
{
    <table class="table table-striped table-hover movie-table mt-3">
        <thead class="table-dark">
            <tr>
                <th class="text-light">Title</th>
                <th class="text-light">Description</th>
                <th class="text-light">Genre</th>
                <th class="text-light">Show Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var show in Model)
            {
                <tr>
                    <td class="text-light">@show.Movie.Title</td>
                    <td class="text-light">@show.Movie.Description</td>
                    <td class="text-light">@show.Movie.Genre?.Name</td>
                    <td class="text-light">@show.ShowDate?.ToString("dd MMM yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center mt-3 text-light">No movies scheduled for the next two weeks.</p>
}

<style>
    /* Styl powitalny */
    .welcome-section {
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* Gradient fioletowy */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .welcome-section h1, .welcome-section p {
            margin: 0;
        }

    /* Tabela filmów */
    .movie-table {
        background-color: #1c1c1e;
        border-radius: 8px;
        overflow: hidden;
    }

        .movie-table thead {
            background-color: #333;
            color: #f8f9fa; /* Jasny tekst w nagłówku */
        }

        .movie-table tbody tr {
            color: #eaeaea; /* Jasny tekst w wierszach */
        }

            .movie-table tbody tr:hover {
                background-color: #4a69bd; /* Podświetlenie na jaśniejszy kolor */
            }

    /* Dodatkowe style dla nagłówków i tekstów */
    .text-light {
        color: #f8f9fa !important;
    }
</style>