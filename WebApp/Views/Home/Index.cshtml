@using Data.Models
@model Dictionary<Movie,List<DateTime>>
@{
    ViewData["Title"] = "Home Page";
}

<<div class="welcome-section text-center mb-4 p-5">
    <h1 class="display-4 text-light">Welcome to CinemaWorld</h1>
    <p class="lead text-light">Discover the magic of movies! Check out the latest showings and book your seat today.</p>
</div>


<h2 class="text-center mt-5 text-light">Upcoming Movies</h2>

@if (Model.Any())
{
    <table class="table table-striped table-hover movie-table mt-3">
        <thead class="table-dark">
            <tr>
                <th class="text-light">Title</th>
                <th class="text-light">Description</th>
                <th class="text-light">Genre</th>
                <th class="text-light">Show Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var show in Model)
            {
                <tr>
                    <td class="text-light">@show.Key.Title</td>
                    <td class="text-light">@show.Key.Description</td>
                    <td class="text-light">@show.Key.Genre?.Name</td>
                    <td class="text-light">
                        <select name="showDates" class="form-select custom-select mt-2" style="width: 200px; background-color: #343a40; color: #fff; border: 1px solid #ccc;">
                            @foreach (var date in show.Value)
                            {
                                <option>@date.ToString("dd MMM yyyy HH:mm")</option>
                            }
                        </select>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center mt-3 text-light">No movies scheduled for the next two weeks.</p>
}
