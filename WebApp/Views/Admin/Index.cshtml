@using Data.Models
@model List<Movie>
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies List</title>
</head>
<body>
    <h1>Movies List</h1>

    @if (Model != null && Model.Any())
    {
        <table border="1">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Genre</th>
                    <th>Show Times</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@movie.Description</td>
                        <td>@movie.Genre.Name</td>
                        <td>
                            @if (movie.ShowTimes != null && movie.ShowTimes.Any())
                            {
                                <ul>
                                    @foreach (var showTime in movie.ShowTimes)
                                    {
                                        <li>@showTime.ShowDate</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>No show times available</p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No movies available</p>
    }

    <a asp-action="Create" class="btn btn-primary">Add movie</a>
</body>
</html>